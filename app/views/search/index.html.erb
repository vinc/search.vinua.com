<aside class="search mb-4">
  <h1 class="display-3 mb-3 text-center fw-bold">
    <%= link_to t("search"), root_path, class: "text-primary text-decoration-none" %>
  </h1>
  <form action="/search" accept-charset="UTF-8" method="get" data-turbo="false">
    <div class="input-group shadow-sm">
      <input type="search" name="q" id="q" value="<%= @query %>" placeholder=<%= t("query_placeholder") %>" class="form-control p-2 border-end-0 border-secondary-subtle" aria-label="Query" />
      <button class="btn btn-outline-primary border-start-0 border-secondary-subtle" id="search-submit" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="18" height="18" style="vertical-align:text-bottom">
          <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/>
        </svg>
      </button>
    </div>
  </form>
</aside>

<%= turbo_frame_tag @results do %>
  <%= render "search/results" %>
<% end %>
